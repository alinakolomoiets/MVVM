<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mvvm.Views.FriendsListPage">
    <StackLayout>
        <Button Text="Добавить" Command="{Binding CreateFriendCommand}"/>
        <ListView x:Name="booksList" ItemsSource="{Binding Friends}"
                  SelectedItem="{Binding SelectedFriend, Mode=TwoWay}" HasUnevenRows="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <ViewCell.View>
                            <StackLayout>
                                <Label Text="{Binding Name}" FontSize="Medium" TextColor="Red"/>
                                <Label Text="{Binding Email}" FontSize="Small" TextColor="Red"/>
                                <Label Text="{Binding Phone}" FontSize="Small" TextColor="Red"/>
                            </StackLayout>
                        </ViewCell.View>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>